<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs');%>
    <title>Login</title>
</head>
<body>
    <%- include('./partials/alerts.ejs'); %> 
    <div class="container my-5">
        <div class="jumbotron">
            <h1>LOGIN</h1><br>
            <form class="form" accept-charset="UTF-8" action="/login" method="post" role="form">
                <div class="form-group">
                    <input class="form-control" placeholder="E-mail" name="email" type="text">
                </div>
                <div class="form-group">
                    <input class="form-control" placeholder="Password" name="password" type="password" value="">
                </div>
                <div class="form-group">
                    <input class="btn btn-success my-3" type="submit" value="Login">
                    <a id="boton_signup" class="btn btn-success my-3" href="/signup">Sign Up</a>
                </div>
            </form>           
        </div>
    </div>
</body>
<script type="module" src="../options/env.js" charset="utf-8"></script>
</html>