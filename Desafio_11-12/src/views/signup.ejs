<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs');%>
    <title>Singup</title>
</head>
<body>
    <%- include('./partials/alerts.ejs'); %> 
    <div class="container my-5">
        <div class="jumbotron">
            <h1>SIGNUP</h1><br>
            <form class="form" accept-charset="UTF-8" role="form" method="post" action="/signup">
                <fieldset>
                    <div class="form-group">
                        <input class="form-control" placeholder="E-mail" name="email" type="text">
                    </div>
                    <div class="form-group">
                        <input class="form-control" placeholder="Password" name="password" type="password" value="">
                    </div>
                    <div class="form-group">
                        <input class="form-control" placeholder="Confirm Password" name="confirmPassword" type="password" value="">
                    </div>
                    <input class="btn btn-success my-3" type="submit" value="Sign Up">
                    <a id="boton_login" class="btn btn-success my-3" href="/login">Login</a>
                </fieldset>
            </form>
        </div>
    </div>
</body>    
</html>