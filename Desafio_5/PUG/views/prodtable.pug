
html(lang="en")
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <title>Document</title>
</head>
<body>
    <h1>Tabla Productos</h1>

    table(cellspacing="10" cellpadding="70" border="3")
        <thead>
            <tr>
                <th scope="col">Producto</th>
                <th scope="col">Precio</th>
                <th scope="col">Foto</th>
            </tr>
        </thead>
        <tbody>
            - if(productos.length === 0) 
                <tr>
                    <td colspan="3">No hay datos</td>
    
                </tr> 
            - else 
    
            - for(let i = 0; i<productos.length; i++) 
                tr
                    td(align="center") #{productos[i].nombre}
                    td(align="center") #{productos[i].precio}
                    td(align="center")
                        <img src="#{productos[i].foto}" size="5" alt="5">
                    
                    
            
            -
            </tbody> 
    

    <a id="btn" href="http://localhost:8080/productos">Producto</a>
    
</body>

style
    form(
        margin: 0 auto;
        width: 50%;
    )
    body(
        background-color: #9dd3f3;
    )



