<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="/socket.io/socket.io.js"></script>
    <title>Document</title>
</head>
<body>
    <h1>Productos</h1>
    <form border="3">
        
        <!-- <div class="form-group"> -->
        <div class="mb-3">
            <!-- <label form="nombre">Nombre</label> -->
            <label for="formGroupExampleInput" class="form-label">Nombre</label>
            <!-- <input type="text" name="nombre" id="nombre" placeholder="Nombre"><br> -->
            <input type="text" class="form-control" id="nombre" placeholder="Nombre">
        </div>
        <div class="mb-3">
            <label for="formGroupExampleInput" class="form-label">Precio</label>
            <input type="text" class="form-control" id="precio" placeholder="Precio">
        </div>
        <div class="mb-3">
            <label for="formGroupExampleInput" class="form-label">Foto</label>
            <input type="text" class="form-control" id="foto" placeholder="Foto">
        </div>
        
        <button type="submit" id="agregar"class="btn btn-primary">Agregar</button>
        <!-- <input type="submit" id="agregar" value="Agregar"> -->
    </form>
    
    <br/>
    
    <h1>Tabla Productos</h1>
    
    <table id="tabla" class="table table-dark table-striped-columns" border="3">
        <thead>
            <tr>
                <th scope="col">Producto</th>
                <th scope="col">Precio</th>
                <th scope="col">Foto</th>
            </tr>
        </thead>
        <tbody>
            <% if(productos.length === 0) { %>
                <tr>
                    <td id ="no hay datos" colspan="3">No hay datos</td>
                    
                </tr> 
                <% } else { %>
                    
                    <% for(let i = 0; i<productos.length; i++) { %>
                        <tr class="table table-dark table-striped-columns">
                            <td><%=productos[i].producto %></td>
                            <td><%=productos[i].precio %></td>
                            <td>
                                <img src="<%=productos[i].foto%>" size="5" alt="5">
                            </td>
                            
                        </tr>
            <% }}%> 
        </tbody>
    </table>
    
    <br/>
    
    
    <h1>Centro de Mensajes</h1>
    
    
    <form>
        <!-- <input type="text" id="username" placeholder="E-mail">
        <input type="text" id="texto" placeholder="Cuentanos algo.."> -->
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Email address</label>
            <input type="email" class="form-control" id="username" placeholder="name@example.com">
          </div>
          <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">Text Area</label>
            <textarea class="form-control" id="texto" rows="3"  placeholder="Cuentanos algo..."></textarea>
          </div>
        <button type="submit" id="boton_chat"class="btn btn-primary">Enviar</button>
    </form>
    
    <br/>
    
    
    <ul id="chatTable">
        <% if(mensajes.length == 0) { %>
            
            <div id="no_mensaje" class="alert alert-primary" role="alert">No hay mensajes</div>
            
            
            <% } else { %>
                
                <% for(let i = 0; i <mensajes.length; i++) { %>
                    
                    <div class="alert alert-success" role="alert"><%=mensajes[i].author%> : <%=mensajes[i].text%> </div>
                    
                    <% }} %>
    </ul>
                
    
    
    <h1>Ver Gatos al Azar</h1> 
    
    <a id="boton_gatos" class="btn btn-primary" href="http://localhost:8080/api/gatos-test">Ver Gatos</a>
    
    
    
</body>

<script src="/main.js" charset="utf-8"></script>
